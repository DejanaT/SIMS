<Window x:Class="Projekat.HostPages.RejectReason"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat.HostPages"
        mc:Ignorable="d"
        Title="RejectReason" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Enter reason:" FontSize="18" Margin="8,0,0,0"/>
        <TextBox x:Name="reasonTextBox" Margin="10,43,10,0" VerticalAlignment="Top" Height="61" />
        <Button Content="Save" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" Height="30" Click="Button_Click"/>
    </Grid>
</Window>
